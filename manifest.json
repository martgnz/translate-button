{
  "manifest_version": 2,
  "name": "Translate button",
  "version": "1.0",
  "description": "Translate a website with only one click using Google Translate",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "icons": {
    "48": "icons/translate-button.png",
    "96": "icons/translate-button@2x.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/translate-disabled-38.png",
    "default_title": "Translate page"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "translate-button@martingonzalez.net"
    }
  }

}
